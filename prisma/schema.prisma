datasource db {
  provider = "postgresql"
  url      = env("PG_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  username  String      @unique
  email     String   
  name      String
  password  String   
  restOwned Resturant[]
  role      Role        @default(user)
}

// pivit table
model Resturant {
  id        String      @id @default(uuid())
  name      String  
  location  String
  ownerId   String
  items     Food[]
  owner     User        @relation(fields: [ownerId], references: [id]) 
}

model Food {
   id          String      @id @default(uuid())
   name        String
   price       String
   ingredients String
   restId      String
   hotel       Resturant   @relation(fields: [restId], references: [id])
}


enum Role {
  user
  admin
  merchant
}

